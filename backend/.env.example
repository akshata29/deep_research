# Deep Research Application Environment Configuration
# Copy this file to .env and update with your Azure configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Azure Configuration
AZURE_REGION=eastus
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_RESOURCE_GROUP=deep-research-rg

# Azure AI Foundry Configuration
AZURE_AI_PROJECT_NAME=deep-research-project
AZURE_AI_HUB_NAME=deep-research-hub
AZURE_AI_ENDPOINT=https://your-ai-foundry-endpoint.cognitiveservices.azure.com

# Model Configuration
DEFAULT_THINKING_MODEL=gpt-4
DEFAULT_TASK_MODEL=gpt-35-turbo
AVAILABLE_MODELS=gpt-4,gpt-35-turbo,deepseek-v2,grok-beta,mistral-large

# Azure Services
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
COSMOS_DB_ENDPOINT=https://your-cosmosdb.documents.azure.com:443/
STORAGE_ACCOUNT_URL=https://yourstorageaccount.blob.core.windows.net

# Bing Search Configuration
BING_SEARCH_ENABLED=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1,*.azurecontainerapps.io

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Export Settings
MAX_EXPORT_FILE_SIZE_MB=50
EXPORT_TIMEOUT_SECONDS=300

# Azure AD B2C (Authentication)
AZURE_AD_B2C_TENANT_NAME=your-b2c-tenant
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_POLICY_NAME=B2C_1_signupsignin
